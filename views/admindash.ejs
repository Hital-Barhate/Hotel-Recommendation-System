<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <!-- âœ… SAME HEADER AS home.ejs -->
  <header class="header">
    <div class="container header-container">
      <h1 class="brand"><i class="fas fa-hotel"></i>Happy-Stays - Admin Panel</h1>
      <div class="auth-buttons">
        <a href="/logout" class="btn-secondary">Logout</a>
      </div>
    </div>
  </header>

  <!-- âœ… Sidebar + Content -->
  <div class="admin-wrapper">
    <aside class="sidebar">
      <div class="sidebar-toggle">
        <i class="fas fa-bars"></i>
      </div>
      <ul class="sidebar-menu">
        <li><a href="#"><i class="fas fa-hotel"></i> Hotels</a></li>
        <li><a href="#"><i class="fas fa-calendar-check"></i> Bookings</a></li>
        <li><a href="#"><i class="fas fa-city"></i> City</a></li>
        <li><a href="#"><i class="fas fa-map-marker-alt"></i> Area</a></li>
        <li><a href="#"><i class="fas fa-star"></i> Reviews</a></li>
        <li><a href="#"><i class="fas fa-user"></i> Profile</a></li>
        <li><a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
      </ul>
    </aside>

    <main class="dashboard-content">
      <div class="stats-container">
        <!-- âœ… Stats Cards -->
        <div class="stat-card">
          <div class="stat-icon">
            <i class="fas fa-hotel"></i>
          </div>
          <div class="stat-content">
            <h3>25</h3>
            <p>Total Hotels</p>
          </div>
          <div class="stat-footer">
            <span class="stat-change positive"><i class="fas fa-arrow-up"></i> 5%</span>
            <span class="stat-period">vs last month</span>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon blue">
            <i class="fas fa-calendar-check"></i>
          </div>
          <div class="stat-content">
            <h3>150</h3>
            <p>Total Bookings</p>
          </div>
          <div class="stat-footer">
            <span class="stat-change positive"><i class="fas fa-arrow-up"></i> 12%</span>
            <span class="stat-period">vs last month</span>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon green">
            <i class="fas fa-city"></i>
          </div>
          <div class="stat-content">
            <h3>12</h3>
            <p>Cities</p>
          </div>
          <div class="stat-footer">
            <span class="stat-change neutral"><i class="fas fa-minus"></i> 0%</span>
            <span class="stat-period">vs last month</span>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon orange">
            <i class="fas fa-star"></i>
          </div>
          <div class="stat-content">
            <h3>89</h3>
            <p>Reviews</p>
          </div>
          <div class="stat-footer">
            <span class="stat-change positive"><i class="fas fa-arrow-up"></i> 8%</span>
            <span class="stat-period">vs last month</span>
          </div>
        </div>
      </div>
    </main>
  </div>

